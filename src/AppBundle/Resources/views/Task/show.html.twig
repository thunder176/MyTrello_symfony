{% extends '::base.html.twig' %}
{% block title %} TechWeb {% endblock %}
{% block userName %}{{ app.user.username }}{% endblock %}

{% block body -%}
    <h1>Task</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ entity.text }}</td>
            </tr>
            <tr>
                <th>Iscomplete</th>
                <td>{{ entity.isComplete }}</td>
            </tr>
            <tr>
                <th>Duedate</th>
                <td>{{ entity.dueDate|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="/p/{{ projectId }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('task_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
